<Router AppAssembly="typeof(Program).Assembly">
    <Found Context="routeData">
        @if (IsAuthRoute(routeData))
        {
            <RouteView RouteData="routeData" DefaultLayout="typeof(Layout.AuthLayout)" />
        }
        else
        {
            <RouteView RouteData="routeData" DefaultLayout="typeof(Layout.MainLayout)" />
        }
        <FocusOnNavigate RouteData="routeData" Selector="h1" />
    </Found>
</Router>

@code {
    private bool IsAuthRoute(RouteData routeData)
    {
        var path = routeData.PageType?.Name;
        Console.WriteLine("Paththt" + path);
        return path == "Login" || path == "Register"; // Check for more pages if needed
    }
}
